# Communication Centralizer Environment Configuration

# API Credentials
OPENAI_API_KEY=your_openai_api_key
PHANTOMBUSTER_API_KEY=your_phantombuster_api_key
PHANTOMBUSTER_MESSAGE_AGENT_ID=your_agent_id
CALENDLY_API_KEY=your_calendly_api_key
CALENDLY_USER=your_calendly_username

# Email Settings
EMAIL_TYPE=gmail  # gmail or outlook
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password

# Handshake Settings
HANDSHAKE_USERNAME=your_handshake_username
HANDSHAKE_PASSWORD=your_handshake_password
HANDSHAKE_AUTOMATION=puppeteer  # selenium or puppeteer
HANDSHAKE_MAX_MESSAGES=10

# Puppeteer requires v24.3.1+ for security (fixes ws vulnerability)

# Google Sheets
GOOGLE_SHEET_ID=your_google_sheet_id

# NLP Settings
ENABLE_LLM=true
SPACY_MODEL=en_core_web_sm
SPACY_LLM_MODEL=gpt-3.5-turbo

# Slack
SLACK_BOT_TOKEN=your_slack_bot_token

# Discord
DISCORD_BOT_TOKEN=your_discord_bot_token 